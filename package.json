{
  "name": "gentool",
  "version": "0.1.1",
  "description": "Tool for easy starter of common ts server/client/fullstack project or service",
  "main": "server/index.js",
  "scripts": {
    "lint": "tslint -p tsconfig.json --exclude **/client/**",
    "dev:node": "ts-node src/index.ts",
    "dev:demon": "nodemon --config nodemon.json",
    "copy": "cp -r src/docker lib && cp -r src/templates lib",
    "build": "npm run lint && tsc -p tsconfig.json && npm run copy",
    "release": "npm run build && npm publish"
  },
  "bin": {
    "gentool": "./lib/index.js"
  },
  "keywords": [
    "Gentool",
    "Starter",
    "Server",
    "Typescript"
  ],
  "author": "Danyil Moroz",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.2",
    "clear": "^0.1.0",
    "figlet": "^1.2.3",
    "inquirer": "^6.4.1",
    "ncp": "^2.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.2.0",
    "@types/inquirer": "^6.0.3",
    "@types/ncp": "^2.0.1",
    "@types/node": "^12.0.10",
    "nodemon": "^1.19.1",
    "tslint": "^5.18.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mopcweb/gentool"
  },
  "homepage": "https://github.com/mopcweb/gentool"
}
