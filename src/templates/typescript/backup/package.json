{
  "name": "gentool",
  "version": "0.1.0",
  "description": "tool for easy starter of common ts-node-express app",
  "main": "server/index.js",
  "scripts": {
    "env": "ts-node env.ts",
    "lint": "tslint -p tsconfig.json",
    "client": "npm run env && cd client && npm start",
    "server": "nodemon --config nodemon.json",
    "dev": "concurrently --kill-others-on-fail \"npm run client\" \"npm run server\"",
    "build:server": "npm run lint && tsc server/index.ts",
    "build:client": "npm run lint && npm run env && cd client && npm run build",
    "build": "npm run build:server && npm run build:client",
    "start": "node server",
    "prod": "npm run build && npm start"
  },
  "keywords": [
    "Gentool",
    "Starter"
  ],
  "author": "Essention UA",
  "license": "ISC",
  "dependencies": {
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.10",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "chalk": "^2.4.2",
    "cli-table3": "^0.5.1",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "nodemon": "^1.19.1",
    "tslint": "^5.18.0"
  }
}
